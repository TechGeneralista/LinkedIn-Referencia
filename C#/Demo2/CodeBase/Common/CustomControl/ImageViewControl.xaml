<UserControl x:Class="Common.CustomControl.ImageViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Common.CustomControl"
             xmlns:int="clr-namespace:Common.CustomControl.Internals"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <int:ZoomPanBorder ClipToBounds="True" Background="Gray">
        <Image x:Name="image" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </int:ZoomPanBorder>
</UserControl>
