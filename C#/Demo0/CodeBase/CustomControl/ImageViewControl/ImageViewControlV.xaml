<UserControl x:Class="CustomControl.ImageViewControl.ImageViewControlV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CustomControl.ImageViewControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:ZoomPanBorder ClipToBounds="True" Background="DarkBlue"  SizeChanged="UserControl_SizeChanged">
        <Border BorderBrush="Gray" BorderThickness="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="image" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Border>
    </local:ZoomPanBorder>
</UserControl>
