<Window x:Class="uVisionV2.Settings.SettingsV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uVisionV2.Settings"
        xmlns:lng="clr-namespace:Common.Language;assembly=Common"
        mc:Ignorable="d"
        Title="{Binding LanguageDC.Settings.Value}" Height="500" Width="800" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <lng:LanguageV DataContext="{Binding LanguageDC}" HorizontalAlignment="Left"/>
    </Grid>
</Window>
