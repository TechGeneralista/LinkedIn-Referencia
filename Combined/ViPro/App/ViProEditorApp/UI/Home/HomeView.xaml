<UserControl x:Class="ViProEditorApp.UI.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViProEditorApp.UI.Home"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Welcome in ViPro Editor" FontSize="36"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Create new project" Click="CreateNewProjectClicked"/>
            <Button Content="Open exist project" Click="OpenExistProjectClicked"/>
        </StackPanel>
        
    </StackPanel>
    
</UserControl>
